extends layout

block content
    h1= title
    p Simple Proxy Configuration

    // Wrapper
    #wrapper

        // PROXY INFO
        #proxyInfo
            h2 Proxy Info
            p
                strong ProxyURL:
                |  <span id='proxyInfoProxyURL'></span>
                br
                strong TargetURL:
                |  <span id='proxyInfoTargetURL'></span>
                br
                strong Latency:
                |  <span id='proxyInfoLatency'></span>
                
        // /PROXY INFO

        // PROXY LIST
        h2 Proxy List
        #proxyList
            table
                thead
                    th ProxyURL
                    th TargetURL
                    th Latency
                    th Delete?
                tbody
        // /PROXY LIST

        // ADD PROXY
        h2 Add Simple Proxy
        #addProxy
            fieldset
                input#inputProxyURL(type='text', placeholder='Proxy URL')
                br
                input#inputProxyTargetURL(type='text', placeholder='Target URL')
                br
                input#inputLatency(type='text', placeholder='Latency') 
                br
                button#btnAddProxy Add Proxy
        // /ADD PROXY

    // /WRAPPER